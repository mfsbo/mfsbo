{
  "compilerOptions": {
    // Node.js/Gulp environment settings
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    
    // Type definitions
    "types": ["node", "gulp"],
    
    // Interop and strictness
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Path aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    
    // Don't emit files (Gulp runs via ts-node)
    "noEmit": true
  },
  "include": [
    "gulpfile.ts"
  ],
  "exclude": [
    "node_modules",
    ".vitepress",
    "website"
  ]
}
